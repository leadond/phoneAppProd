# Phone Range Nexus - Development Environment Configuration Template
# Copy this file to .env for development deployment
# Generated: February 2, 2025

#=============================================================================
# CORE APPLICATION CONFIGURATION
#=============================================================================

# Application Environment
NODE_ENV=development
APP_NAME=Phone Range Nexus - Development
VERSION=4.0.0

# Database Configuration
LOCAL_DB_PATH=phone-range-nexus-dev.db
DB_VERSION=4
DB_NAME=PhoneRangeNexusDev

#=============================================================================
# AUTHENTICATION & SESSION CONFIGURATION
#=============================================================================

# Session Management
AUTH_SESSION_DURATION=24h
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123
ALLOW_WEAK_PASSWORDS=true
REQUIRE_PASSWORD_CHANGE=false
SESSION_ROTATION=false

# Development-friendly auth settings
AUTO_LOGIN_ENABLED=false
REMEMBER_ME_ENABLED=true
PASSWORD_RESET_ENABLED=true

#=============================================================================
# SECURITY CONFIGURATION (RELAXED FOR DEVELOPMENT)
#=============================================================================

# HTTP Security
ENFORCE_HTTPS=false
SECURE_COOKIES=false
CSRF_PROTECTION=false
RATE_LIMITING=false
SECURITY_HEADERS=false
XSS_PROTECTION=false

# CORS Settings
CORS_ENABLED=true
CORS_ORIGIN=*
CORS_CREDENTIALS=true

#=============================================================================
# DEVELOPMENT FEATURES
#=============================================================================

# Debug Settings
DEBUG_MODE=true
VERBOSE_LOGGING=true
ENABLE_CONSOLE_LOGS=true
PERFORMANCE_MONITORING=true
DEVELOPMENT_TOOLS_ENABLED=true

# Sample Data
SAMPLE_DATA_ENABLED=true
MOCK_SERVICES_ENABLED=true
GENERATE_SAMPLE_USERS=true
SAMPLE_PHONE_COUNT=1000
SAMPLE_RANGE_COUNT=10

# Testing Features
ENABLE_TEST_ENDPOINTS=true
ALLOW_DATABASE_RESET=true
SKIP_EMAIL_VERIFICATION=true

#=============================================================================
# PERFORMANCE SETTINGS (DEVELOPMENT OPTIMIZED)
#=============================================================================

# Caching (Disabled for live development)
ENABLE_COMPRESSION=false
CACHE_STATIC_ASSETS=false
MINIFY_RESPONSES=false
LAZY_LOADING=false
BROWSER_CACHE_DISABLED=true
BROWSER_STORAGE_PERSISTENCE=false

# Development Performance
ENABLE_HOT_RELOAD=true
WATCH_FILE_CHANGES=true
AUTO_REFRESH_ENABLED=true

#=============================================================================
# LOGGING & MONITORING
#=============================================================================

# Logging Configuration
LOG_LEVEL=debug
AUDIT_LEVEL=standard
ENABLE_METRICS=false
ERROR_REPORTING=false
CONSOLE_LOG_FORMAT=pretty

# Development Monitoring
ENABLE_QUERY_LOGGING=true
TRACK_PERFORMANCE_METRICS=true
LOG_ALL_REQUESTS=true
ENABLE_STACK_TRACES=true

#=============================================================================
# UC ADMIN TOOLS CONFIGURATION
#=============================================================================

# UC Network Settings
UC_NETWORK_TIMEOUT=10000
UC_DEBUG_NETWORK_TESTS=true
UC_ALLOW_INSECURE_CONNECTIONS=true
UC_DEFAULT_DNS_SERVERS=8.8.8.8,1.1.1.1
UC_PORT_CHECK_TIMEOUT=3000
UC_MAX_CONCURRENT_TESTS=3

# UC Configuration Management
UC_CONFIG_VALIDATION_STRICT=false
UC_MAX_CONFIG_VERSIONS=5
UC_CONFIG_FILE_MAX_SIZE=5242880
UC_AUTO_BACKUP_ENABLED=false
UC_CONFIG_AUTO_SAVE=true

# UC Development Settings
UC_DEBUG_MODE=true
UC_MOCK_NETWORK_TESTS=true
UC_DEVELOPMENT_TOOLS=true
UC_VERBOSE_DIAGNOSTICS=true
UC_ALLOW_CONFIG_OVERRIDE=true

#=============================================================================
# BACKUP CONFIGURATION
#=============================================================================

# Backup Settings (Minimal for development)
BACKUP_ENABLED=false
BACKUP_INTERVAL=manual
BACKUP_RETENTION_DAYS=7
BACKUP_COMPRESSION=false
BACKUP_ENCRYPTION=false

#=============================================================================
# INTEGRATION SETTINGS
#=============================================================================

# PBX Integration (Mock for development)
PBX_INTEGRATION_ENABLED=false
PBX_MOCK_RESPONSES=true
PBX_CONNECTION_TIMEOUT=5000

# LDAP Integration (Disabled for development)
LDAP_ENABLED=false
LDAP_MOCK_AUTHENTICATION=true

# External Services
EMAIL_SERVICE_ENABLED=false
SMS_SERVICE_ENABLED=false
WEBHOOK_ENDPOINTS_ENABLED=false

#=============================================================================
# UI/UX DEVELOPMENT SETTINGS
#=============================================================================

# UI Configuration
THEME=default
ENABLE_DARK_MODE=true
SHOW_DEBUG_INFO=true
ENABLE_FEATURE_FLAGS=true
SHOW_PERFORMANCE_OVERLAY=false

# Development UI Features
ENABLE_COMPONENT_INSPECTOR=true
SHOW_GRID_OVERLAY=false
ENABLE_ACCESSIBILITY_TOOLS=true
SHOW_TOOLTIPS=true

#=============================================================================
# BROWSER COMPATIBILITY
#=============================================================================

# Browser Settings
BROWSER_COMPATIBILITY_MODE=modern
POLYFILL_LOADING=auto
LEGACY_BROWSER_SUPPORT=false

# Storage Settings
LOCAL_STORAGE_PREFIX=prn_dev_
SESSION_STORAGE_PREFIX=prn_dev_session_
INDEXEDDB_NAME=PhoneRangeNexusDev

#=============================================================================
# DEVELOPMENT NOTES
#=============================================================================

# NOTE: This configuration is optimized for development workflow
# - Security features are disabled for easier development
# - Debug features are enabled for troubleshooting
# - Mock services replace external dependencies
# - Caching is disabled for immediate feedback
# 
# IMPORTANT: Do not use this configuration in production!