# Phone Range Nexus - Production Environment Configuration Template
# Copy this file to .env for production deployment
# Generated: February 2, 2025

#=============================================================================
# CORE APPLICATION CONFIGURATION
#=============================================================================

# Application Environment
NODE_ENV=production
APP_NAME=Phone Range Nexus
VERSION=4.0.0

# Database Configuration
LOCAL_DB_PATH=phone-range-nexus-prod.db
DB_VERSION=4
DB_NAME=PhoneRangeNexus

#=============================================================================
# AUTHENTICATION & SESSION CONFIGURATION
#=============================================================================

# Session Management - CHANGE DEFAULT PASSWORD IMMEDIATELY!
AUTH_SESSION_DURATION=4h
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=CHANGE_ME_IMMEDIATELY
ALLOW_WEAK_PASSWORDS=false
REQUIRE_PASSWORD_CHANGE=true
SESSION_ROTATION=true

# Production Authentication Settings
AUTO_LOGIN_ENABLED=false
REMEMBER_ME_ENABLED=false
PASSWORD_RESET_ENABLED=true
ACCOUNT_LOCKOUT_ENABLED=true
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=15m

#=============================================================================
# SECURITY CONFIGURATION (PRODUCTION HARDENED)
#=============================================================================

# HTTP Security - REQUIRED FOR PRODUCTION
ENFORCE_HTTPS=true
SECURE_COOKIES=true
CSRF_PROTECTION=true
RATE_LIMITING=true
SECURITY_HEADERS=true
XSS_PROTECTION=true

# Advanced Security
CONTENT_SECURITY_POLICY=default
HSTS_ENABLED=false
CLICKJACKING_PROTECTION=true
MIME_TYPE_SNIFFING_PROTECTION=true

# CORS Settings (Restrict in production)
CORS_ENABLED=true
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

#=============================================================================
# PRODUCTION FEATURES (OPTIMIZED FOR STABILITY)
#=============================================================================

# Debug Settings (DISABLED FOR PRODUCTION)
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_CONSOLE_LOGS=false
PERFORMANCE_MONITORING=true
DEVELOPMENT_TOOLS_ENABLED=false

# Sample Data (DISABLED FOR PRODUCTION)
SAMPLE_DATA_ENABLED=false
MOCK_SERVICES_ENABLED=false
GENERATE_SAMPLE_USERS=false

# Testing Features (DISABLED FOR PRODUCTION)
ENABLE_TEST_ENDPOINTS=false
ALLOW_DATABASE_RESET=false
SKIP_EMAIL_VERIFICATION=false

#=============================================================================
# PERFORMANCE SETTINGS (PRODUCTION OPTIMIZED)
#=============================================================================

# Caching (ENABLED FOR PERFORMANCE)
ENABLE_COMPRESSION=true
CACHE_STATIC_ASSETS=true
MINIFY_RESPONSES=true
LAZY_LOADING=true
BROWSER_CACHE_ENABLED=true
BROWSER_STORAGE_PERSISTENCE=true
BROWSER_CACHE_DURATION=7d

# Production Performance
ENABLE_CDN=false
PRELOAD_CRITICAL_RESOURCES=true
ASYNC_LOADING=true
IMAGE_OPTIMIZATION=true

#=============================================================================
# LOGGING & MONITORING (PRODUCTION LEVEL)
#=============================================================================

# Logging Configuration
LOG_LEVEL=warn
AUDIT_LEVEL=comprehensive
ENABLE_METRICS=true
ERROR_REPORTING=true
CONSOLE_LOG_FORMAT=json

# Production Monitoring
ENABLE_QUERY_LOGGING=false
TRACK_PERFORMANCE_METRICS=true
LOG_ALL_REQUESTS=false
ENABLE_STACK_TRACES=false
MONITOR_MEMORY_USAGE=true
MONITOR_CPU_USAGE=true

# Alerting
ENABLE_ALERTS=true
ALERT_EMAIL=admin@yourdomain.com
ALERT_THRESHOLD_CPU=80
ALERT_THRESHOLD_MEMORY=512
ALERT_THRESHOLD_ERRORS=10

#=============================================================================
# UC ADMIN TOOLS CONFIGURATION (PRODUCTION)
#=============================================================================

# UC Network Settings
UC_NETWORK_TIMEOUT=30000
UC_DEBUG_NETWORK_TESTS=false
UC_ALLOW_INSECURE_CONNECTIONS=false
UC_DEFAULT_DNS_SERVERS=8.8.8.8,1.1.1.1,208.67.222.222
UC_PORT_CHECK_TIMEOUT=5000
UC_MAX_CONCURRENT_TESTS=5

# UC Configuration Management
UC_CONFIG_VALIDATION_STRICT=true
UC_MAX_CONFIG_VERSIONS=10
UC_CONFIG_FILE_MAX_SIZE=10485760
UC_AUTO_BACKUP_ENABLED=true
UC_CONFIG_AUTO_SAVE=false
UC_CONFIG_APPROVAL_REQUIRED=false

# UC Production Settings
UC_DEBUG_MODE=false
UC_MOCK_NETWORK_TESTS=false
UC_DEVELOPMENT_TOOLS=false
UC_VERBOSE_DIAGNOSTICS=false
UC_ALLOW_CONFIG_OVERRIDE=false
UC_ENCRYPT_SENSITIVE_DATA=false

#=============================================================================
# BACKUP CONFIGURATION (PRODUCTION GRADE)
#=============================================================================

# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=false
BACKUP_VERIFICATION=true

# Backup Storage
BACKUP_LOCATION=./backups
BACKUP_REMOTE_SYNC=false
BACKUP_MAX_SIZE_MB=1000
BACKUP_CLEANUP_OLD=true

#=============================================================================
# INTEGRATION SETTINGS (PRODUCTION)
#=============================================================================

# PBX Integration
PBX_INTEGRATION_ENABLED=false
PBX_MOCK_RESPONSES=false
PBX_CONNECTION_TIMEOUT=30000
PBX_RETRY_ATTEMPTS=3
PBX_SECURE_CONNECTION=true

# LDAP Integration
LDAP_ENABLED=false
LDAP_MOCK_AUTHENTICATION=false
LDAP_CONNECTION_TIMEOUT=10000
LDAP_USE_SSL=true

# External Services
EMAIL_SERVICE_ENABLED=false
SMS_SERVICE_ENABLED=false
WEBHOOK_ENDPOINTS_ENABLED=false
API_RATE_LIMITING=true

#=============================================================================
# UI/UX PRODUCTION SETTINGS
#=============================================================================

# UI Configuration
THEME=default
ENABLE_DARK_MODE=false
SHOW_DEBUG_INFO=false
ENABLE_FEATURE_FLAGS=false
SHOW_PERFORMANCE_OVERLAY=false

# Production UI Features
ENABLE_COMPONENT_INSPECTOR=false
SHOW_GRID_OVERLAY=false
ENABLE_ACCESSIBILITY_TOOLS=true
SHOW_TOOLTIPS=true
COMPACT_MODE=false

#=============================================================================
# BROWSER COMPATIBILITY (PRODUCTION)
#=============================================================================

# Browser Settings
BROWSER_COMPATIBILITY_MODE=standard
POLYFILL_LOADING=selective
LEGACY_BROWSER_SUPPORT=true
MIN_BROWSER_VERSION_CHROME=90
MIN_BROWSER_VERSION_FIREFOX=88
MIN_BROWSER_VERSION_SAFARI=14

# Storage Settings
LOCAL_STORAGE_PREFIX=prn_
SESSION_STORAGE_PREFIX=prn_session_
INDEXEDDB_NAME=PhoneRangeNexus

#=============================================================================
# COMPLIANCE & REGULATORY
#=============================================================================

# Data Protection
GDPR_COMPLIANCE=false
HIPAA_COMPLIANCE=false
SOX_COMPLIANCE=false
DATA_RETENTION_DAYS=2555
PRIVACY_MODE=false

# Audit Requirements
AUDIT_USER_ACTIONS=true
AUDIT_DATA_CHANGES=true
AUDIT_SYSTEM_EVENTS=true
AUDIT_EXPORT_OPERATIONS=true

#=============================================================================
# DEPLOYMENT CONFIGURATION
#=============================================================================

# Server Configuration
PORT=3000
HOST=0.0.0.0
WORKERS=auto
CLUSTER_MODE=false

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
READINESS_CHECK_ENABLED=true

# Graceful Shutdown
GRACEFUL_SHUTDOWN_TIMEOUT=30000
SHUTDOWN_CLEANUP_ENABLED=true

