# Phone Range Nexus - Secure Environment Configuration Template
# Copy this file to .env for high-security deployment
# Generated: February 2, 2025

#=============================================================================
# CORE APPLICATION CONFIGURATION
#=============================================================================

# Application Environment
NODE_ENV=production
APP_NAME=Phone Range Nexus - Secure
VERSION=4.0.0
SECURITY_LEVEL=high

# Database Configuration
LOCAL_DB_PATH=phone-range-nexus-secure.db
DB_VERSION=4
DB_NAME=PhoneRangeNexusSecure
DB_ENCRYPTION=true

#=============================================================================
# AUTHENTICATION & SESSION CONFIGURATION (MAXIMUM SECURITY)
#=============================================================================

# Session Management - Ultra-secure settings
AUTH_SESSION_DURATION=2h
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=CHANGE_IMMEDIATELY_ULTRA_SECURE
ALLOW_WEAK_PASSWORDS=false
REQUIRE_PASSWORD_CHANGE=true
SESSION_ROTATION=true
IDLE_TIMEOUT=30m

# Multi-Factor Authentication
MULTI_FACTOR_AUTH=true
MFA_REQUIRED_FOR_ADMIN=true
MFA_TOKEN_EXPIRY=300
MFA_BACKUP_CODES=true

# Advanced Authentication
AUTO_LOGIN_ENABLED=false
REMEMBER_ME_ENABLED=false
PASSWORD_RESET_ENABLED=false
ACCOUNT_LOCKOUT_ENABLED=true
MAX_LOGIN_ATTEMPTS=3
LOCKOUT_DURATION=30m
PROGRESSIVE_LOCKOUT=true

# Password Policy (Strict)
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
PASSWORD_MAX_AGE_DAYS=60
PASSWORD_HISTORY_COUNT=10
PASSWORD_COMPLEXITY_SCORE=80

#=============================================================================
# SECURITY CONFIGURATION (MAXIMUM HARDENING)
#=============================================================================

# HTTP Security - All protections enabled
ENFORCE_HTTPS=true
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true
SECURE_COOKIES=true
CSRF_PROTECTION=true
RATE_LIMITING=aggressive
SECURITY_HEADERS=true
XSS_PROTECTION=true

# Advanced Security Headers
CONTENT_SECURITY_POLICY=strict
CLICKJACKING_PROTECTION=true
MIME_TYPE_SNIFFING_PROTECTION=true
REFERRER_POLICY=strict-origin-when-cross-origin
PERMISSIONS_POLICY=strict
EXPECT_CT_ENABLED=true

# Network Security
CORS_ENABLED=false
CORS_ORIGIN=none
CORS_CREDENTIALS=false
DISABLE_HTTP_METHODS=TRACE,OPTIONS

# Intrusion Detection
INTRUSION_DETECTION=true
FAILED_LOGIN_MONITORING=true
SUSPICIOUS_ACTIVITY_DETECTION=true
IP_WHITELIST_ENABLED=false
GEO_BLOCKING_ENABLED=false

#=============================================================================
# SECURE FEATURES (HARDENED)
#=============================================================================

# Debug Settings (COMPLETELY DISABLED)
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_CONSOLE_LOGS=false
PERFORMANCE_MONITORING=true
DEVELOPMENT_TOOLS_ENABLED=false

# Data Generation (DISABLED)
SAMPLE_DATA_ENABLED=false
MOCK_SERVICES_ENABLED=false
GENERATE_SAMPLE_USERS=false

# Testing Features (DISABLED FOR SECURITY)
ENABLE_TEST_ENDPOINTS=false
ALLOW_DATABASE_RESET=false
SKIP_EMAIL_VERIFICATION=false

#=============================================================================
# PERFORMANCE SETTINGS (SECURITY-OPTIMIZED)
#=============================================================================

# Caching (Secure caching only)
ENABLE_COMPRESSION=true
CACHE_STATIC_ASSETS=true
MINIFY_RESPONSES=true
LAZY_LOADING=true
BROWSER_CACHE_ENABLED=true
BROWSER_STORAGE_PERSISTENCE=true
BROWSER_CACHE_DURATION=1h
CACHE_CONTROL_PRIVATE=true

# Secure Performance
ENABLE_CDN=false
PRELOAD_CRITICAL_RESOURCES=false
ASYNC_LOADING=true
IMAGE_OPTIMIZATION=false
RESOURCE_INTEGRITY_CHECKS=true

#=============================================================================
# LOGGING & MONITORING (COMPREHENSIVE SECURITY)
#=============================================================================

# Logging Configuration
LOG_LEVEL=info
AUDIT_LEVEL=comprehensive
ENABLE_METRICS=true
ERROR_REPORTING=true
CONSOLE_LOG_FORMAT=json
LOG_SANITIZATION=true

# Security Monitoring
COMPREHENSIVE_LOGGING=true
SECURITY_EVENT_MONITORING=true
REAL_TIME_ALERTS=true
LOG_INTEGRITY_CHECKS=true
TAMPER_DETECTION=true

# Advanced Monitoring
ENABLE_QUERY_LOGGING=false
TRACK_PERFORMANCE_METRICS=true
LOG_ALL_REQUESTS=true
ENABLE_STACK_TRACES=false
MONITOR_MEMORY_USAGE=true
MONITOR_CPU_USAGE=true
MONITOR_NETWORK_TRAFFIC=true

# Security Alerts
ENABLE_ALERTS=true
ALERT_EMAIL=security@yourdomain.com
ALERT_THRESHOLD_CPU=70
ALERT_THRESHOLD_MEMORY=256
ALERT_THRESHOLD_ERRORS=5
SECURITY_INCIDENT_ALERTS=true
ANOMALY_DETECTION_ALERTS=true

#=============================================================================
# UC ADMIN TOOLS CONFIGURATION (SECURE)
#=============================================================================

# UC Network Settings
UC_NETWORK_TIMEOUT=20000
UC_DEBUG_NETWORK_TESTS=false
UC_ALLOW_INSECURE_CONNECTIONS=false
UC_DEFAULT_DNS_SERVERS=1.1.1.1,8.8.8.8
