# Phone Range Nexus Production Configuration Template
# Copy this file to .env and modify the values for your environment

#######################
# Application Settings
#######################
NODE_ENV=production
APP_NAME=Phone Range Nexus
VERSION=1.0.0
PORT=8080
HOST=0.0.0.0

#######################
# Database Configuration
#######################
DATABASE_TYPE=sqlite
SQLITE_DB_PATH=/opt/phone-range-nexus/data/phone-range-nexus.db
DATABASE_BACKUP_PATH=/opt/phone-range-nexus/backups
DATABASE_WAL_MODE=true
DATABASE_CACHE_SIZE=1000000

#######################
# Authentication & Security
#######################
# IMPORTANT: Change this to a secure random string
SESSION_SECRET=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING-AT-LEAST-32-CHARACTERS-LONG

AUTH_SESSION_DURATION=8h
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=15m
PASSWORD_MIN_LENGTH=8

# Default admin credentials (CHANGE IMMEDIATELY)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=CHANGE-THIS-PASSWORD-IMMEDIATELY

#######################
# Network & CORS Configuration
#######################
# Update with your server's IP addresses and domain names
ALLOWED_ORIGINS=http://localhost:8080,http://YOUR-SERVER-IP:8080,https://YOUR-DOMAIN.com

CORS_ENABLED=true
TRUST_PROXY=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

#######################
# Backup Configuration
#######################
AUTO_BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *
BACKUP_COMPRESSION=true

#######################
# Logging Configuration
#######################
LOG_LEVEL=info
LOG_DIR=/opt/phone-range-nexus/logs
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90

#######################
# Performance Settings
#######################
ENABLE_COMPRESSION=true
STATIC_FILE_CACHE_MAX_AGE=31536000
JSON_LIMIT=10mb
URL_ENCODED_LIMIT=10mb

#######################
# Monitoring & Health Checks
#######################
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true

#######################
# Email Configuration (Optional)
#######################
# Uncomment and configure if you want email notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# NOTIFICATION_EMAIL=admin@your-domain.com

#######################
# SSL/TLS Configuration (Optional)
#######################
# Uncomment if running HTTPS directly in Node.js (not recommended - use nginx)
# SSL_ENABLED=false
# SSL_CERT_PATH=/path/to/certificate.crt
# SSL_KEY_PATH=/path/to/private.key

#######################
# Development Override (Keep false for production)
#######################
DEVELOPMENT_MODE=false
DEBUG_ENABLED=false